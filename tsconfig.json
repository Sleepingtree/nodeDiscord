{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2019",
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "rootDir": "src",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}